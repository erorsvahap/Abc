@model WebUI.Models.ProductListViewModel

@{
    Layout = "~/Views/_Layout.cshtml";
}

<body>
    <div>
    <table class="table table-responsive">
        <tr>
         <td>Ürünler</td>
         <td>Ürün Fiyat</td>
         <td>Ürün Stok Mİktarı </td>
         <td></td>
        </tr>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.UnitPrice</td>
                <td>@product.UnitsInStock </td>
                <td>
                    <a class="btn btn-xs btn-success" asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@product.ProductID"> Sepete Ekle </a>
                </td>
            </tr>
        }
    </table>
    </div>
        <product-list-pager 
                 current-category="@Model.CurrentCategory" 
                  current-page="@Model.CurrentPage" 
                   page-count="@Model.PageCount"
                    page-size="@Model.PageSize">
        </product-list-pager>

</body>
